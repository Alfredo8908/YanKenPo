<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!--Para seleccionar las opciones -->
        <ImageView
            android:id="@+id/imgPapel"
            android:layout_width="@dimen/tama単oImagen"
            android:layout_height="wrap_content"
            android:src="@drawable/papel"/>

        <ImageView
            android:id="@+id/imgPiedra"
            android:layout_width="@dimen/tama単oImagen"
            android:layout_height="wrap_content"
            android:src="@drawable/piedra"/>

        <ImageView
            android:id="@+id/imgTijera"
            android:layout_width="@dimen/tama単oImagen"
            android:layout_height="wrap_content"
            android:src="@drawable/tijera"/>

    </LinearLayout>

    <!--Para visualizar las imagenes del VS-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/imgUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/incognita"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vs"
            android:textSize="@dimen/tama単oVS"/>

        <ImageView
            android:id="@+id/imgSistema"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/incognita"/>

    </LinearLayout>

    <!--Para los botones-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnJugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Jugar"/>

        <Button
            android:id="@+id/btnResetear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Resetear"/>
    </LinearLayout>

</LinearLayout>
